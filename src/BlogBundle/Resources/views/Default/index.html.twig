{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <!--  barre de navigation (dÃ©but)   -->
    <nav>
        <div class="nav-wrapper #eeeeee grey">
            <a href="{{ url('homepage') }}" class="brand-logo right"><i class="large material-icons medium">flight_land</i></a>
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li><a href="symphony.html">Symfony</a></li>
                <li><a href="#">Article</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>
    </nav>
    <!--  barre de navigation (fin)   -->

    {% for article in article %}

        <div class="card">
            <div class="card-header">{{ article.Cat }}</div>
            <div class="card-body">
                <h5 class="card-title">{{ article.titre }}</h5>
                <p class="card-text">{{ article.contenu }}</p>
                <a href="{{ path('article_show', { 'id': article.id }) }}" class="btn btn-primary">Lire l'article</a>
            </div>
        </div>

    {% endfor %}

{% endblock %}
