                    <!-- Custom styles for this template -->
                    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
                    {% endblock %}

                    {% block javascript %}
                        <script src="{{ asset('biblio/bootstrap/js/bootstrap.min.js') }}"></script>
                        <script src="{{ asset('biblio/materialize/js/materialize.min.js') }}"></script>
                        <script src="{{ asset('biblio/bootstrap/popper.min.js') }}"></script>
