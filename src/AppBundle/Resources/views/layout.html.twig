{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{parent() }}
    <link href="{{asset('biblio/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{asset('biblio/materialize/css/materialize.min.css') }}" rel="stylesheet">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
